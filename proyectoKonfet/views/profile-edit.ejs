<!-- Header -->
<%- include('./partials/headerLogueado')%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12">
				<form class="form" action="/" method="POST">
					<div class="mb-3">
						<label for="nombreUsuario" class="nombreUsuario">Nombre de usuario</label>
						<input name="nombreUsuario" type="text" class="form-control" id="nombreUsuario" value="<%= usuario.nombreUsuario %>" >
					</div>
					<div class="mb-3">
						<label for="contrasenia" class="contrasenia"> Contrase√±a </label>
						<input name="contrasenia" type="contrasenia" class="form-control" id="contrasenia" >
					</div>
					<div class="mb-3">
						<label for="email" class="email">Mail</label>
						<input name="email" type="email" class="form-control" id="email" placeholder="name@example.com" value="<%= usuario.email %> ">
					</div>
					<div class="mb-3">
						<label for="dni" class="dni">DNI</label>
						<input name="dni" type="number" class="form-control" id="dni" value="<%= usuario.dni %>" >
					</div>
					<div class="input-group mb-3">
						<label class="fotoDePerfil" for="cover"></label>
						<input name="fotoDePerfil" type="file" class="form-control" id="fotoDePerfil" value="<%= usuario.fotoDePerfil%>" >
					</div>
					<button type="submit" class="btn btn-primary">Actualizar datos</button>
				</form>
			</h2>

			<!-- footer -->
			<%- include('./partials/footer') %>
				<!-- /footer -->