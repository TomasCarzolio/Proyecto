<!-- Header -->
<%- include('./partials/header')%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form method="POST" enctype="multipart/form-data">
				<article>
						<div class="mb-3">
							<label for="nombreUsuario" class="form-label">Nombre de usuario</label>
							<input name="nombreUsuario" type="text" class="form-control" id="nombreUsuario" value="<%= usuario.nombreUsuario %>">
						</div>

						<div class="mb-3">
							<label for="contrasenia" class="form-label"> Cambiar contrase√±a </label>
							<input name="contrasenia" type="password" class="form-control" id="contrasenia">
						</div>

						<div class="mb-3">
							<label for="email" class="form-label">Email</label>
							<input name="email" type="email" class="form-control" id="email"
								value="<%= usuario.email %>">
						</div>

						<div class="mb-3">
							<label for="dni" class="form-label">DNI</label>
							<input name="dni" type="number" class="form-control" id="dni" value="<%= usuario.dni %>">
						</div>

						<div class="input-group mb-3">
							<label for="fotoDePerfil" class="form-label"> Nueva foto de perfil </label>
							<input name="fotoDePerfil" type="file" class="form-control" id="fotoDePerfil">
						</div>
	
							<h2 class="col-12"><button type="submit" class="btn btn-primary">Entregar</button></h2>
				</article>
			</form>

			<!-- footer -->
			<%- include('./partials/footer') %>
				<!-- /footer -->