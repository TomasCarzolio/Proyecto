<!-- Header -->
<%- include('./partials/headerLogueado')%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/retrato.jpeg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">
						<%= usuario.nombreUsuario %>
							<a href="/users/profile/edit">
								<i class="fas fa-cog"></i>
							</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<% for (let i=0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= productos[i].id - 1 %> ">
							<figure class="product-box_image">
								<img class="size-photo" src="<%= productos[i].foto %>" alt="Artista">
							</figure>
							<article class="product-box_data">
								<h2>
									<%= productos[i].artista %> - <%= productos[i].lugar %>
								</h2>
								<p>
									<%= productos[i].fecha %> - <%= productos[i].precio %>
								</p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>;
				<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>
		<!-- /footer -->