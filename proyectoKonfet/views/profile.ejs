<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado')%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="https://via.placeholder.com/150" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= datos.usuario.nombreUsuario %> 
						<a href="profile-edit.html">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<%= for (let i = 0; i < datos.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/:<%= datos.productos[i].id %> ">
						<figure class="product-box_image">
							<img src="/images/products/default-image.png" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= datos.productos[i].artista %> - <%= datos.productos[i].lugar %> </h2>
							<p> <%= datos.productos[i].fecha %> - <%= datos.productos[i].precio %> </p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>;
			<%= } %> 
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->