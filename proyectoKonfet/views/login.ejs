<!-- Header -->
<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<% if (locals.error) { %>
			 <%= error %> 
			<% } %>
			<!-- Show the form -->
			<h2 class="col-12">
				<form method="POST">
					<div class="mb-3">
						<label for="nombreUsuario" class="input-group-text" > Nombre de usuario </label>
						<input name="nombreUsuario" type="text" class="form-control" id="nombreUsuario">
					</div>
					<div class="mb-3">
						<label for="contrasenia" class="form-label">Contrase√±a</label>
						<input name="contrasenia" type="password" class="form-control" id="contrasenia">
					</div>
					<div class="mb-3 form-check">
						<label for="recordame" class="form-check-label"> Recordame </label>
						<input name="recordame" type="checkbox" class="form-check-input" id="recordame">
					</div>
					<button type="submit" class="btn btn-primary">Entregar</button>
				</form>
			</h2>
			<!-- footer -->
			<%- include('./partials/footer') %>
				<!-- /footer -->