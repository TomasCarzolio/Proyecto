<!-- Header -->
<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<form method="POST" enctype="multipart/form-data">
				<div class="container products-wrapper">
					<div class="row">
						<div class="col-12">
							<h2 class="products-title"> Editar producto </h2>
						</div>
						<!-- Show the "ultimos" products -->
					
							<div class="product-detail">
								<div class="container products-wrapper">
									<div class="d-flex align-items-center">
										<h3 class="products-title"> Concierto
											<%= producto.artista %> | <label for="fecha" class="form-label"></label>
											<input name="fecha" type="date" id="fecha" value="<%= producto.fecha %>"> </h3>
									</div>

								<div class="row">
									<article class="col-12 col-lg-8 product-detail-info">
										<img src="<%= producto.entrada %>" alt="" class="product-detail-img">
										</p>
									</article>
									<article class="col-12 col-lg-4">
											<div class="mb-3">
												<label for="descripcion" class="form-label"></label>
												<input name="descripcion" type="text" class="form-control" id="descripcion" value="<%= producto.descripcion %>">
											</div>

											<div class="mb-3">
												<label for="lugar" class="form-label"></label>
												<input name="lugar" type="text" class="form-control" id="lugar" value="<%= producto.lugar %>">
											</div>
										   
											<div class="mb-3">
												<label for="precio" class="form-label"></label>
												<input name="precio" type="number" class="form-control" id="precio" value="<%= producto.precio %>">
											</div>
											<div class="mb-3">
											<h2 class="col-12"><button type="submit" class="btn btn-primary">Entregar</button></h2>
									</article>
							</div>
					</form>



			<!-- footer -->
			<%- include('./partials/footer') %>
				<!-- /footer -->